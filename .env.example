# =============================================================================
# ATC Nuxt Application - Environment Variables
# =============================================================================
# Скопируйте этот файл в .env и заполните значения
# Для Netlify: добавьте эти переменные в Dashboard -> Site settings -> Environment variables
# =============================================================================

# -----------------------------------------------------------------------------
# DATABASE - База данных MySQL
# -----------------------------------------------------------------------------
# Для локальной разработки используйте localhost
# Для Netlify используйте внешний сервис (PlanetScale, Railway, Aiven)

DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=atc_production

# Для PlanetScale используйте SSL:
# DATABASE_HOST=aws.connect.psdb.cloud
# DATABASE_SSL=true

# -----------------------------------------------------------------------------
# JWT - Аутентификация
# -----------------------------------------------------------------------------
# ВАЖНО: Используйте случайные строки минимум 64 символа!
# Генерация: openssl rand -base64 64

JWT_SECRET=change-this-to-a-very-long-random-secret-key-at-least-64-characters
JWT_EXPIRES_IN=7d

REFRESH_TOKEN_SECRET=change-this-to-another-very-long-random-secret-key-at-least-64-characters
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# TELEGRAM BOT
# -----------------------------------------------------------------------------
# Получите токен у @BotFather в Telegram

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# Webhook URL для production (Netlify URL):
# TELEGRAM_WEBHOOK_URL=https://your-site.netlify.app/api/telegram/webhook

# -----------------------------------------------------------------------------
# APPLICATION
# -----------------------------------------------------------------------------

NODE_ENV=production

# Включить автоматические миграции при старте (для Netlify)
AUTO_MIGRATE=true

# -----------------------------------------------------------------------------
# OPTIONAL - Дополнительные настройки
# -----------------------------------------------------------------------------

# Порт (для локального запуска, Netlify игнорирует)
# PORT=3000

# Логирование
# LOG_LEVEL=info
